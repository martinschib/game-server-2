{
  "name": "express-postgres-starter",
  "private": true,
  "version": "1.0.0",
  "description": "Starter project using Express and Postgres",
  "scripts": {
    "migrate": "node ./src/bin/migrate.js",
    "migrate:create": "migrate create --migrations-dir='./src/migrations'",
    "dev": "nodemon --exec 'npm run build:dev && npm run start'",
    "format": "prettier --write .",
    "start": "node built/index.js",
    "build:dev": "esbuild ./src/server.ts --platform=node --bundle --minify --outfile=built/index.js --watch",
    "build:prod": "esbuild ./src/server.ts --platform=node --bundle --minify --outfile=built/index.js"
  },
  "keywords": [
    "express",
    "postgres"
  ],
  "author": "Hugo Di Francesco",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "migrate": "^1.7.0",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "pg-native": "^3.0.0",
    "sql-template-strings": "^2.2.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/pg": "^8.6.5",
    "esbuild": "^0.14.49",
    "esbuild-node-tsc": "^1.8.6",
    "nodemon": "^2.0.12",
    "prettier": "2.7.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HugoDF/express-postgres-starter.git"
  },
  "bugs": {
    "url": "https://github.com/HugoDF/express-postgres-starter/issues"
  },
  "homepage": "https://github.com/HugoDF/express-postgres-starter#readme"
}
